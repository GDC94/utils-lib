#!/usr/bin/env sh

# Importar el script de Husky
. "$(dirname -- "$0")/_/husky.sh"

# Permitir que el script continÃºe incluso si un comando falla
set +e

# Mensaje de inicio
echo "[Automated] Running pre-commit hook"

# Ejecutar Stylelint
echo "[Automated] Stylelinting files"
npm run lint

# Verificar si hubo errores al ejecutar npm run lint
if [ $? -ne 0 ]; then
  # Mostrar mensaje de error y salir con cÃ³digo de error
  echo "[Automated] Stylelinting failed ðŸ’€"
  exit 1
fi
